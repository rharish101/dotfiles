# ================================================
# =================== VISUALS ====================
# ================================================

# Font for window titles
font pango:Roboto 16

# Disable focus following the mouse
focus_follows_mouse no

# Disable titlebars (for gaps)
for_window [class=".*"] border pixel 0

# Add gaps between windows
gaps inner 15

# Open these apps as floating by default
for_window [class="Lollypop"] floating enable
for_window [class="Spotify"] floating enable
for_window [window_type="notification"] floating enable

# Colors for window decorations (visible in stacked, tabbed layouts)
# class                 border  backgr. text    indicator child_border
client.focused          #080808 #080808 #f5f5f5 #080808   #080808
client.focused_inactive #080808 #080808 #f5f5f5 #080808   #080808
client.unfocused        #080808 #080808 #888888 #080808   #080808

# Center align the title in the title bar
title_align center

# ================================================
# ================= KEYBINDINGS ==================
# ================================================

# =================== General ====================

# Use Super as the mod key
set $mod Mod4

# Kill the focused window
bindsym $mod+q kill

# Minimize the focused window that is controlled with a custom "yad-script"
bindsym Control+q exec /home/rharish/Programs/Shell/yad-min.zsh

# Reload the configuration file
bindsym $mod+Shift+c reload

# Restart i3 inplace (preserves your layout/session; can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# =================== Layouts ====================

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Change container layout (b/w stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Set focused window to split stacked, tabbed, horizontally, vertically
bindsym $mod+Control+s split v; layout stacking
bindsym $mod+Control+w split v; layout tabbed
bindsym $mod+Control+h split h
bindsym $mod+Control+v split v

# ==================== Focus =====================

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Focus the parent/child container
bindsym $mod+a focus parent
bindsym $mod+d focus child

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# =================== Floating ===================

# Toggle floating/tiling for the focused window
bindsym $mod+Shift+space floating toggle

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# ================== Scratchpad ==================

# Move the currently focused window to the scratchpad (a hidden workspace)
bindsym $mod+Shift+minus move scratchpad

# Cycle through the scratchpad windows
bindsym $mod+minus scratchpad show

# =================== Resizing ===================

# Mode for resizing windows (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing h will shrink the window’s width.
    # Pressing l will grow the window’s width.
    # Pressing k will shrink the window’s height.
    # Pressing j will grow the window’s height.
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # Go back to normal (the "default" mode): Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

# Go to the "resize" mode
bindsym $mod+r mode "resize"

# ================== Workspaces ==================

